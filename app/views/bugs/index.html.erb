<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<span class="btn">
    <%= link_to 'New Bug', new_bug_path, remote: true %>
</span>

<h1>Listing Bugs</h1>

<table>
  
  <thead>
    <tr bgcolor="#FF0000">
      <th>Title</th>
      <th>Date</th>
      <th>User</th>
      <th>Description</th>
      <th>Status</th>
      <th>Issue Type</th>
      <th>Priority</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="bugs">
     <%= render @bugs %>
  </tbody>
</table>

 <div id="blog-form" style="display:none;"></div>

